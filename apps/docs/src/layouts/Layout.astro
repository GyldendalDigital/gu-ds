---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Gyldendal Undervisning designsystem" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://www.skolestudio.no/assets/fonts/inter-3.19/Inter-roman.var.woff2?v=3.19"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import url("https://fonts.cdnfonts.com/css/inter");
  @import "gu-ds-tokens/output/tokens.css";

  :root {
    --accent: var(--primitives-color-purple-500);
    --accent-light: var(--primitives-color-purple-100);
    --accent-dark: var(--primitives-color-purple-800);
    --accent-gradient: linear-gradient(
      45deg,
      var(--accent),
      var(--accent-light) 30%,
      var(--primitives-color-white) 60%
    );
  }
  html {
    font-family: Inter, system-ui, sans-serif;
    background: var(--primitives-color-purple-1000);
  }
  body {
    margin: 0;
  }
</style>
